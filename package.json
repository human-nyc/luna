{
  "name": "human-themekit-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "styles": "sass styles/layout/:theme/assets/ styles/templates/:theme/assets/ --embed-source-map",
    "watch_styles": "npm-watch styles",
    "scripts": "webpack --mode=development --watch",
    "start": "concurrently 'theme watch' 'yarn scripts' 'yarn watch_styles' 'theme open'",
    "deploy":  "yarn webpack --mode=production && yarn sass styles/layout/:theme/assets/ styles/templates/:theme/assets/ --no-source-map && theme deploy -e staging --allow-live",
    "release": "yarn webpack --mode=production && yarn sass styles/layout/:theme/assets/ styles/templates/:theme/assets/ --no-source-map && theme deploy -e qa --allow-live"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.10.2",
    "@shopify/theme-addresses": "^3.0.3",
    "@shopify/theme-currency": "^4.0.0",
    "@shopify/theme-images": "^4.0.0",
    "add": "^2.0.6",
    "autoprefixer": "^9.7.6",
    "babel-core": "6.26.3",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "flickity": "^2.2.1",
    "flickity-as-nav-for": "^2.0.1",
    "flickity-fade": "^1.0.0",
    "flickity-imagesloaded": "^2.0.0",
    "npm-watch": "^0.6.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-loader": "^3.0.0",
    "querystring": "^0.2.0",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "smoothscroll-polyfill": "^0.4.4",
    "vue": "^2.6.11",
    "vue-loader": "^15.9.0",
    "vuex": "^3.1.3",
    "webpack": "^5.0.0-beta.12",
    "webpack-cli": "^3.3.11",
    "yarn": "^1.22.5"
  },
  "watch": {
    "styles": {
      "patterns": [
        "styles"
      ],
      "extensions": "scss",
      "quiet": false
    }
  },
  "dependencies": {}
}
