  {% render 'script-tags' %}

  <!-- Social Meta Tags -->
  {% assign twitter_handle = settings.social_twitter_url | split: 'twitter.com/' | last %}
  {% render 'social-meta-tags', twitter_handle: twitter_handle %}

  <!-- Yotpo -->
