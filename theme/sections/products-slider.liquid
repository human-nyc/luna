{% render 'products-slider', section: section %}

{% schema %}
  {
    "name": "Products Slider",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Shop More Luna Products"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text",
        "default": "Shop All"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL",
        "default": "/collections/all"
      },
      {
        "type": "select",
        "id": "background_color",
        "label": "Background color",
        "options": [
          {
            "value": "blue",
            "label": "Blue"
          },
          {
            "value": "gray",
            "label": "Gray"
          }
        ]
      }
    ],
    "blocks": [
      {
        "name": "Featured Product",
        "type": "featured_product",
        "settings": [
          {
            "type": "product",
            "id": "product_item",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Products slider",
        "category": "Product"
      }
    ]
  }
{% endschema %}
