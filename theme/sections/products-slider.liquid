{% assign featured_collection_handle = section.settings.featured_collection_handle | default: 'all' %}

{% assign collection = collections[featured_collection_handle] %}

{% render 'shop-more', collection: collection, background_color: section.settings.background_color %}

{% schema %}
  {
    "name": "Products Slider",
    "settings": [
      {
        "type": "select",
        "id": "background_color",
        "label": "Background color",
        "options": [
          {
            "value": "blue",
            "label": "Blue"
          },
          {
            "value": "gray",
            "label": "Gray"
          }
        ]
      },
      {
        "type": "collection",
        "label": "Featured collection",
        "id": "featured_collection_handle"
      }
    ],
    "blocks": [
      {
        "name": "Featured Product",
        "type": "featured_product",
        "settings": [
          {
            "type": "product",
            "id": "product_item",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Products slider",
        "category": "Product"
      }
    ]
  }
{% endschema %}
