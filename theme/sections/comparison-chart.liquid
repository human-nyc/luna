<div class="comparison-chart" :class="{ 'comparison-chart_open': isOpen }" id="comparisonChart">
  <div class="comparison-chart__top">
    <button class="cta-button" @click="toggleOpen()">
      {{ section.settings.button_text }}
    </button>
  </div>
  {% include 'comparison-chart' %}
</div>

{% schema %}
  {
    "name": "Comparison Chart",
    "class": "comparison-chart",
    "settings": [
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "How we measure up"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Comparison chart",
        "category": "Text"
      }
    ]
  }
{% endschema %}
