{% for block in section.blocks %}
  {% if block.settings.product == product.handle %}
    {% assign content = block %}

    {% include 'checklist-section' %}

  {% endif %}
{% endfor %}

{% schema %}
  {
    "name": "Product Benefits",
    "class": "shopify-section-checklist",
    "settings": [],
    "blocks": [
      {
        "type": "product-benefits",
        "name": "Product Benefits",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          },
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "header",
            "type": "text",
            "label": "Header"
          },
          {
            "id": "list",
            "type": "html",
            "label": "Benefit List",
            "default": "<ul><li>Benefit 1</li><li>Benefit 2</li></ul>"
          }
        ]
      }
    ]
  }
{% endschema %}
