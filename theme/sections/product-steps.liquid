{% for block in section.blocks %}
  {% if block.settings.product == product.handle %}
    {% assign content = block.settings %}

    {% include 'product-steps' %}

  {% endif %}
{% endfor %}

{% schema %}
  {
    "name": "Product Steps",
    "class": "shopify-section-product-steps",
    "settings": [],
    "blocks": [
      {
        "type": "product-steps",
        "name": "Product Steps",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          },
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "header",
            "type": "text",
            "label": "Header"
          },
          {
            "id": "step_1",
            "type": "richtext",
            "label": "Step 1"
          },
          {
            "id": "step_2",
            "type": "richtext",
            "label": "Step 2"
          },
          {
            "id": "step_3",
            "type": "richtext",
            "label": "Step 3"
          },
          {
            "id": "image_2",
            "type": "image_picker",
            "label": "Image 2 (optional)"
          },
          {
            "id": "image_3",
            "type": "image_picker",
            "label": "Image 3 (optional)"
          }
        ]
      }
    ]
  }
{% endschema %}
