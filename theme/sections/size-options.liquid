<style type="text/css">
  {% for block in section.blocks %}
    .option--{{block.settings.title | handleize }} .option-value__image::after {
      {% if block.settings.filename %}
        background-image: url('{{block.settings.image | img_url: 'x46', scale: 2 }}');
        background-image: url('{{block.settings.filename | file_url }}');
      {% endif %}
    }
    .option--{{block.settings.title | handleize }} .option-value__info::after {
      content: "{{block.settings.size_info}}";
    }
  {% endfor %}
</style>

{% schema %}
  {
    "name": "Size Options",
    "blocks": [
      {
        "name": "Size option",
        "type": "size_option",
        "settings": [
          {
            "label": "Name",
            "type": "text",
            "id": "title"
          },
          {
            "label": "Info",
            "type": "text",
            "id": "size_info"
          },
          {
            "label": "SVG Icon Filename",
            "info": "upload in Settings > Files",
            "type": "text",
            "id": "filename"
          },
          {
            "label": "Size Image",
            "type": "image_picker",
            "id": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
