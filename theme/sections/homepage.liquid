
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'hero' %}
      {% include 'home-hero' %}
    {% when 'press' %}
      {% include 'press' %}
    {% when 'comparison_chart' %}
      {% include 'comparison-chart' %}
    {% when 'collections_list' %}
      {% include 'collections-list' %}
    {% when 'details_section' %}
      {% include 'details-section' %}
    {% when 'features_list' %}
      {% include 'features-list' %}
    {% when 'testimonials' %}
      {% include 'testimonials' %}
    {% when 'icons_section' %}
      {% include 'icons-section' %}
    {% when 'products_slider' %}
      {% include 'products-slider' %}
  {% endcase %}
{% endfor %}

