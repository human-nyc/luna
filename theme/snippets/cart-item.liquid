<div class="cart-item">
  <a :href="item.url" class="cart-item__image">
    <img
      :src="getSizedImageUrl(item.featured_image.url, '92x57_crop_center@2x')"
      :alt="item.featured_image.alt"
      loading="lazy"
    >
  </a>

  <div class="cart-item__info">
    <h3 class="item-title"><a :href="item.url">${item.product_title}</a></h3>
    <span class="item-price">${formatMoney(item.line_price)}</span>
    <p class="item-variants">
      ${getVariantColor(item.options_with_values)}<br>
      ${getVariantSize(item.options_with_values)}
    </p>

    <div class="item-qty">
      <button @click="handleQtyClick(index + 1, item.quantity - 1)" class="qty__control minus">-</button>
      <span>${item.quantity}</span>
      <button @click="handleQtyClick(index + 1, item.quantity + 1)" class="qty__control plus">+</button>
    </div>

    <button @click="removeCartItem(index + 1)" class="item-remove"><span>Remove</span></button>
  </div>
</div>