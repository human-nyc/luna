<div class="product-steps" id="ProductSteps">
  <div class="product-steps__inner">
    {% if content.image %}
    <div class="product-steps__image">
      <div class="image-wrapper">
        <div class="fill-image">
          <img src="{{content.image | img_url: '720x810', crop: 'center', scale: 2}}" />
        </div>
      </div>
    </div>
    {% endif %}
    <div class="product-steps__content">
      <div class="product-steps__content-inner">
        <h2 class="section-header">{{content.header}}</h2>
        <div class="header-underline"></div>
        <div class="product-steps__choices">
          <button type="button" @click="selectStep(1)" :class="{'active': step === 1}">01.</button>
          <button type="button" @click="selectStep(2)" :class="{'active': step === 2}">02.</button>
          <button type="button" @click="selectStep(3)" :class="{'active': step === 3}">03.</button>
        </div>
        {% if content.step_1 %}
          <div
            class="product-steps__item"
            v-if="step === 1"
            v-cloak
          >{{content.step_1}}</div>
        {% endif %}
        {% if content.step_2 %}
          <div
            class="product-steps__item"
            v-if="step === 2"
            v-cloak
          >{{content.step_2}}</div>
        {% endif %}
        {% if content.step_3 %}
          <div
            class="product-steps__item"
            v-if="step === 3"
            v-cloak
          >{{content.step_3}}</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>